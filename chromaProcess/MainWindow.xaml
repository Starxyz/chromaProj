<Window x:Class="chromaProcess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chromaProcess"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="304*"/>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="770*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="4">
            <Menu x:Name="file" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="515">
                <MenuItem Header="文件">
                    <MenuItem Name="menuInput" Header="导入" Click="menuInput_Click"></MenuItem>
                    <MenuItem Name="menuOutput" Header="导出" Click="menuOutput_Click"></MenuItem>
                    <MenuItem Name="menuExit" Header="退出" Click="menuExit_Click" ></MenuItem>
                </MenuItem>
                <MenuItem Header="编辑" Click="MenuEdit_Click"></MenuItem>
                <MenuItem Header="公式"></MenuItem>
                <MenuItem Header="关于"></MenuItem>

            </Menu>
        </DockPanel>
        <ListView x:Name="spectrumList" HorizontalAlignment="Left" MinWidth="100" Margin="0,23,0,235">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="波长" Width="100" DisplayMemberBinding="{Binding Wave}"/>
                    <GridViewColumn Header="强度" Width="100" DisplayMemberBinding="{Binding Intensity}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
